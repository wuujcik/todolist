<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToDo" />

    <style name="Todo.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:minHeight">@dimen/mtrl_toolbar_default_height</item>
        <item name="maxButtonHeight">@dimen/mtrl_toolbar_default_height</item>
    </style>

    <style name="Todo.Button"  parent="Widget.MaterialComponents.Button" >
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>


    <style name="Todo.RecyclerList" >
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="Todo.RecyclerList.Title" >
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="Todo.RecyclerList.Date" >
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
    </style>

    <style name="Todo.RecyclerList.FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="maxImageSize">@dimen/fab_icon_size</item>
        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">center</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_margin">@dimen/margin_floating_button</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>


    <style name="Todo.Details" >
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Todo.Details.TitleLayout" >
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Todo.Details.Title" >
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Todo.Details.DescriptionLayout" >
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Todo.Details.Description" >
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Todo.Details.IconLayout" >
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="Todo.Details.Icon" >
        <item name="android:background">?attr/colorOnBackground</item>
    </style>



</resources>